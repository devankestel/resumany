<div id="formtastic_container" class="line">
  <div id = "download_form">
    <%= semantic_form_for [@resume] do |f| %>  
      <%= f.semantic_fields_for :displays do |display| %>
        <%= render 'display_fields', f: display %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add display', f, :displays %>
      </div>
      <%= f.actions %>
    <% end %>
  </div>
</div>